@model ContactViewModel
@section Scripts{
    <script src="~\node_modules\jquery-validation\dist\jquery.validate.min.js"></script>
    <script src="~\node_modules\jquery-validation-unobtrusive\dist\jquery.validate.unobtrusive.min.js"></script>
}
<form action="mailto:chazsherrill@icloud.com" method="post" enctype="text/plain">
    <div asp-validation-summary="ModelOnly"></div>
    <h2><label asp-for="Name">Your Name:</label></h2>   
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>
    <br />
    <h2><label asp-for="Email">Email:</label></h2>
    <input type="email" asp-for="Email" />
    <span asp-validation-for="Email"></span>
    <br />
    <h2><label asp-for="Subject">Subject:</label></h2>
    <input asp-for="Subject" />
    <span asp-validation-for="Subject"></span>
    <br />
    <h2><label asp-for="Message">Message:</label></h2>
    <textarea rows="4" asp-for="Message"></textarea>
    <span asp-validation-for="Message"></span>
    <br />
    <h2><input type="submit" value="Send Message" /></h2>
    <br />
</form>